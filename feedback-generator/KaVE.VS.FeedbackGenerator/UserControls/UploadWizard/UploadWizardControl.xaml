<Window x:Class="KaVE.VS.FeedbackGenerator.UserControls.UploadWizard.UploadWizardControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:properties="clr-namespace:KaVE.VS.FeedbackGenerator.Properties"
        xmlns:root="clr-namespace:KaVE.VS.FeedbackGenerator"
        xmlns:profile="clr-namespace:KaVE.VS.FeedbackGenerator.UserControls.UserProfile"
        xmlns:export="clr-namespace:KaVE.VS.FeedbackGenerator.UserControls.Export"
        xmlns:anonymization="clr-namespace:KaVE.VS.FeedbackGenerator.UserControls.Anonymization"
        xmlns:uploadWizard="clr-namespace:KaVE.VS.FeedbackGenerator.UserControls.UploadWizard"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        MinWidth="400"
        MinHeight="100"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Title="{x:Static root:Properties.UploadWizard.window_title}">

    <Window.Resources>
        <ResourceDictionary>
            <BitmapImage x:Key="Icon" UriSource="/KaVE.VS.FeedbackGenerator;Component/Resources/question.png" />
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <StackPanel Margin="5" Grid.Column="0">

            <TextBlock Text="{x:Static root:Properties.UploadWizard.description}" />

            <Expander Header="{x:Static root:Properties.SessionManager.Options_Export_Title}">
                <anonymization:AnonymizationControl x:Name="AnonymizationControl"
                                                    DataContext="{Binding AnonymizationContext}" />
            </Expander>

            <Expander Header="{x:Static root:Properties.UserProfileMessages.Title}" Name="UserInformationExpander">
                <profile:UserProfileControl x:Name="UserSettingsGrid" DataContext="{Binding UserProfileContext}" />
            </Expander>

            <GroupBox Header="{x:Static root:Properties.UserProfileMessages.FeedbackBox}">
                <Grid>
                    <TextBox AcceptsReturn="True" TextWrapping="Wrap" MaxLines="3" MinLines="3"
                             VerticalScrollBarVisibility="Visible" Text="{Binding FeedbackText}" />
                </Grid>
            </GroupBox>

            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Visibility="Hidden" HorizontalAlignment="Left"
                       VerticalAlignment="Center" Source="{StaticResource Icon}"
                       Height="25" Width="25" />
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock VerticalAlignment="Center">
                        <Hyperlink Click="On_Review_Click">
                            <TextBlock Text="{x:Static root:Properties.UploadWizard.review_link}" />
                        </Hyperlink>
                    </TextBlock>
                    <!-- TODO perhaps: include the old pics (in comments) in the button's Content -->
                    <Button ToolTip="{x:Static properties:SessionManager.Export}" Margin="5" MinWidth="93"
                            Content="{x:Static root:Properties.UploadWizard.export_zip_button}"
                            Click="ZipButtonClicked">
                        <!--<Image Source="/KaVE.VS.FeedbackGenerator;Component/Resources/export.png" />-->
                    </Button>
                    <Button ToolTip="{x:Static properties:SessionManager.Send}" Margin="5" MinWidth="93"
                            Content="{x:Static root:Properties.UploadWizard.export_upload_button}"
                            Click="UploadButtonClicked">
                        <!--<Image Source="/KaVE.VS.FeedbackGenerator;Component/Resources/send.png" /> -->
                    </Button>
                </StackPanel>
            </Grid>
        </StackPanel>
        <!-- EXPORT OVERLAY -->
        <Border Background="LightGray" Opacity=".9"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                Grid.Column="0">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                        VerticalAlignment="Center" Width="Auto">
                <TextBlock Text="{Binding BusyMessageAnimated}"
                           FontWeight="Bold" FontSize="24" />
                <TextBlock Text="{x:Static root:Properties.UploadWizard.CloseWizardDuringExportHint}"
                           FontSize="18" />
            </StackPanel>
        </Border>
    </Grid>
</Window>